# ============================================================================
# PERFORMANCE OPTIMIZATION ENVIRONMENT VARIABLES
# Copy ke .env file Anda
# ============================================================================

# CACHE CONFIGURATION
# Gunakan Redis untuk performa terbaik (jika tersedia)
# Alternatif: file, database, memcached
CACHE_STORE=redis
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_DRIVER=redis
RESPONSE_CACHE_LIFETIME=604800

# REDIS CONFIGURATION
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_CONNECTION=cache

# DATABASE OPTIMIZATION
DB_CACHE_CONNECTION=default
DB_CACHE_TABLE=cache

# REPOSITORY PATTERN CACHING
REPOSITORY_CACHE_ENABLED=true

# IMAGE CACHE (untuk Intervention Image)
IMAGE_CACHE_ENABLED=true
IMAGE_CACHE_DRIVER=file

# BROWSER CACHING
APP_HTTP_CACHE_HEADERS=true
CACHE_HEADERS_CACHE_CONTROL=public, max-age=86400
CACHE_HEADERS_VARY=Accept-Encoding

# APPLICATION DEBUG (disable di production)
APP_DEBUG=false
APP_ENV=production

# VITE CONFIGURATION
VITE_HOST=localhost
VITE_PORT=5173
VITE_HMR_HOST=localhost
VITE_HMR_PORT=5173
VITE_HMR_PROTOCOL=ws

# DEBUGBAR (disable di production)
DEBUGBAR_ENABLED=false

# SESSION OPTIMIZATION
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# QUEUE JOBS (untuk heavy operations)
QUEUE_CONNECTION=redis
QUEUE_DRIVER=redis

# LOG OPTIMIZATION
LOG_LEVEL=error
LOG_CHANNEL=single

# PERFORMANCE MONITORING
APP_PROFILING=false
TELESCOPE_ENABLED=false
